@using CarDealership.Web.Infrastructure
@if (User.IsAdmin())
{
    ﻿<div class="container mt-5">
        <div class="text-center">
            <h1 class="display-4 mb-4 text-primary">Welcome to the Admin Dashboard</h1>
            <p class="lead mb-5 text-muted">Manage your application using the sections below:</p>
        </div>



        <div class="col-md-4">
            <div class="card shadow h-100 border-0">
                <div class="card-body d-flex flex-column align-items-center text-center">
                    <i class="fas fa-film fa-3x text-secondary mb-3"></i>
                    <h5 class="card-title">Manage Cinemas</h5>
                    <p class="card-text text-muted">Create, update, and delete cinema entries.</p>
                    <a asp-area="Admin" asp-controller="VehicleManagment" asp-action="Index" class="btn btn-secondary mt-auto w-100">
                        Go to Cinemas
                    </a>
                </div>
            </div>
        </div>

    </div>
}