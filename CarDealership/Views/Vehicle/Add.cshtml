@using CarDealership.Web.ViewModels.Vehicle;
@model VehicleViewModel

@{
    ViewBag.Title = "Add Vehicle";
}

<h2 class="text-center my-4">@ViewBag.Title</h2>

<form method="post" asp-controller="Vehicle" asp-action="Add">
    @Html.AntiForgeryToken()
     @* <input type="hidden" asp-for="@Model.CategoryId" />
     <input type="hidden" asp-for="@Model.TypeId" /> *@
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Make" class="form-label">Make</label>
                <input asp-for="Make" class="form-control" placeholder="Enter Vehicle Make" />
                <span asp-validation-for="Make" class="small text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Model" class="form-label">Model</label>
                <input asp-for="Model" class="form-control" placeholder="Enter Vehicle Model" />
                <span asp-validation-for="Model" class="small text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Price" class="form-label">Price</label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="Enter Price" />
        <span asp-validation-for="Price" class="small text-danger"></span>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="FuelType" class="form-label">FuelType</label>
                <input asp-for="FuelType" class="form-control" placeholder="Fuel Type" />
                <span asp-validation-for="FuelType" class="small text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="GearBox" class="form-label">GearBox</label>
                <input asp-for="GearBox" class="form-control" placeholder="Gearbox Type" />
                <span asp-validation-for="GearBox" class="small text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Year" class="form-label">Year</label>
                <input asp-for="Year" type="number" class="form-control" placeholder="Year" />
                <span asp-validation-for="Year" class="small text-danger"></span>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Doors" class="form-label">Doors</label>
                <input asp-for="Doors" type="number" class="form-control" placeholder="Number of Doors" />
                <span asp-validation-for="Doors" class="small text-danger"></span>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Seats" class="form-label">Seats</label>
                <input asp-for="Seats" type="number" class="form-control" placeholder="Number of Seats" />
                <span asp-validation-for="Seats" class="small text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="TankCapacity" class="form-label">TankCapacity</label>
        <input asp-for="TankCapacity" type="number" class="form-control" placeholder="Tank Capacity" />
        <span asp-validation-for="TankCapacity" class="small text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="HorsePower" class="form-label">HorsePower</label>
        <input asp-for="HorsePower" type="number" class="form-control" placeholder="Horsepower" />
        <span asp-validation-for="HorsePower" class="small text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Cubage" class="form-label">Engine Cubage</label>
        <input asp-for="Cubage" type="number" class="form-control" placeholder="Engine Cubage" />
        <span asp-validation-for="Cubage" class="small text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImageUrl" class="form-label">Image URL</label>
        <input asp-for="ImageUrl" class="form-control" placeholder="Enter Image URL" />
        <span asp-validation-for="ImageUrl" class="small text-danger"></span>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="CategoryId" class="form-label">Category</label>
                <select asp-for="CategoryId" class="form-control">
                    <option value="">Select a Category</option>
                    @foreach (var category in Model.VehicleCategories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="small text-danger"></span>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="TypeId" class="form-label">Type</label>
                <select asp-for="TypeId" class="form-control">
                    <option value="">Select a Type</option>
                    @foreach (var type in Model.VehicleTypes)
                    {
                        <option value="@type.Id">@type.Name</option>
                    }
                </select>
                <span asp-validation-for="TypeId" class="small text-danger"></span>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="LocationId" class="form-label">Location</label>
                <select asp-for="LocationId" class="form-control">
                    <option value="">Select Location</option>
                    @foreach (var location in Model.VehicleLocations)
                    {
                        <option value="@location.Id">@location.Name</option>
                    }
                </select>
                <span asp-validation-for="LocationId" class="small text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="PurposeId" class="form-label">Purpose</label>
                <select asp-for="PurposeId" class="form-control">
                    <option value="">Select Purpose</option>
                    @foreach (var purpose in Model.VehiclePurposes)
                    {
                        <option value="@purpose.Id">@purpose.Name</option>
                    }
                </select>
                <span asp-validation-for="PurposeId" class="small text-danger"></span>
            </div>
        </div>
    </div>

    <div class="text-center my-4">
        <input class="btn btn-success btn-lg" type="submit" value="Submit" />
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
