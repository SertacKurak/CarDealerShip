@using CarDealership.Web.ViewModels.Vehicle

@model DeleteViewModel

@{
    ViewBag.Title = "Delete Car";
}

<h2 class="text-center">@ViewBag.Title</h2>
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<p>Are you sure to delete the vehicle : <strong>@Model.Make - @Model.Model</strong></p>

<form asp-action="SoftDelete" method="post">
    <div class="row">
        <div class="col-md-4">
            <img class="card-img-top" src="@Model.ImageUrl" alt="Car Image">
        </div>
        <div class="col-md-8">
            <div class="form-group">
                <label asp-for="Make" class="control-label"></label>
                <input asp-for="Make" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label"></label>
                <input asp-for="Model" class="form-control" disabled="disabled" />
            </div>
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>
