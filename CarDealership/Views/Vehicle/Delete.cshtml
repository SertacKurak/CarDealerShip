@using CarDealership.Web.ViewModels.Vehicle
@model DeleteViewModel

@{
    ViewBag.Title = "Delete Vehicle";
}

<div class="container text-center">
    <h2 class="mb-4">Confirm Vehicle Deletion</h2>

    <div class="card shadow-lg p-4 mb-4 bg-white rounded" style="max-width: 500px; margin: auto;">
        <img src="@Model.ImageUrl" alt="@Model.Make @Model.Model" class="card-img-top img-fluid rounded" style="max-height: 300px; object-fit: cover;">

        <div class="card-body">
            <h3 class="card-title">@Model.Make @Model.Model</h3>
            <p class="card-text text-muted">Year: @Model.Year</p>
            
            <p class="text-danger fw-bold">Are you sure you want to delete this vehicle?</p>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger btn-lg">Delete</button>
                <a asp-action="Index" class="btn btn-secondary btn-lg ms-2">Cancel</a>
            </form>
        </div>
    </div>
</div>

