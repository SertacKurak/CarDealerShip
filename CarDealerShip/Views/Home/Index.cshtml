@using CarDealership.Web.Infrastructure

@if (!User.IsAdmin())
{
    {
        ViewBag.Title = "Welcome to CarDeaslership";
    }

    <div class="container text-center my-5">
        <h1 class="display-4">@ViewBag.Title</h1>
        <hr class="my-4">
    </div>

    <div class="text-center">
        <img src="/Images/lopo.jpg" alt="CarDealership Logo" style="max-width: 300px; height: auto;" />
    </div>
}
@if (User.IsAdmin())
{
    <div class="container mt-5">
        <div class="text-center mb-5">
            <h1 class="display-4 text-primary">Welcome to the Admin Dashboard</h1>
            <p class="lead text-muted">Manage your application using the sections below:</p>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="card shadow h-100 border-0">
                    <div class="card-body d-flex flex-column align-items-center text-center">
                        <i class="fas fa-film fa-3x text-secondary mb-3"></i>
                        <h5 class="card-title">Manage Vehicles</h5>
                        <p class="card-text text-muted">Create, update, and delete vehicles.</p>
                        <a asp-area="Admin" asp-controller="VehicleManagment" asp-action="Index" class="btn btn-secondary mt-auto w-100">
                            Go to Vehicles
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
